			<GradientStop Color="#FEFEFE" Offset="0.94"/>
			<GradientStop Color="#EEEDE5" Offset="0.95"/>
			<GradientStop Color="#EEEDE5" Offset="1"/>
		</LinearGradientBrush>
		<LinearGradientBrush x:Key="HorizontalScrollBarPageButtonPressed" EndPoint="0, 1" StartPoint="0, 0">

<Window x:Class="InstiBulb.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InstiBulb"
        xmlns:integration="clr-namespace:InstiBulb.Integration"
        xmlns:wpfView ="clr-namespace:WpfNESViewer;assembly=WpfNESViewer"
        DataContext="{StaticResource Container}"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <integration:NESDisplay x:Name="NesDisplay" Width="256" Height="256"
            Target="{Binding Path=., Converter={StaticResource ContainerResolver}, 
                ConverterParameter=NES.CPU.nitenedo.NESMachine\,6502;NESMachine, Mode=OneTime}"  
                                >
            <integration:NESDisplay.Context>
                <wpfView:WPFNesViewer x:Name="Wpf" />
            </integration:NESDisplay.Context>
        </integration:NESDisplay>

        <views:ControlPanelView x:Name="ControlPanel"  Grid.Row="1"
            DataContext="{Binding Converter={StaticResource ContainerResolver}, 
                            ConverterParameter=Fishbulb.Common.UI.ControlPanelVM\,fishbulbcommonui;ControlPanel}" 
                />
        
        
    </Grid>
</Window>

<Window x:Class="InstiBulb.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InstiBulb"
        xmlns:integration="clr-namespace:InstiBulb.Integration"
        xmlns:wpfView ="clr-namespace:WpfNESViewer"
        xmlns:threeD="clr-namespace:InstiBulb.ThreeDee"
        DataContext="{DynamicResource Container}"
    Title="InstiBulb" Height="480" Width="720"
        Icon="Mario-Dead.ico"
        
        >
    <Grid x:Name="OuterGrid"  MouseDown="OuterGrid_MouseDown" >
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="3" Grid.RowSpan="3"> 
        <integration:NESDisplay x:Name="NesDisplay" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            Target="{Binding Path=., Converter={StaticResource ContainerResolver},  Mode=OneTime}"  
                                >
                <integration:NESDisplay.Context>
                    <wpfView:WPFNesViewer x:Name="Wpf" />
                </integration:NESDisplay.Context>
            </integration:NESDisplay>
        </Border>
        <threeD:ThreeDeeControls x:Name="ControlBoxer" Visibility="Visible" Grid.Row="1" Background="Transparent"/>
        
    </Grid>
    
</Window>

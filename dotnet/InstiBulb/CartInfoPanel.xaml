<UserControl x:Class="InstiBulb.CartInfoPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource HeaderStyle}" Grid.ColumnSpan="2">ROM Information</Label>
        <Border Grid.Row="1" BorderThickness="3" BorderBrush="Black" Background="LightSalmon">
            <TextBlock Text="{Binding CartInfo}"/>
        </Border>
    </Grid>
</UserControl>

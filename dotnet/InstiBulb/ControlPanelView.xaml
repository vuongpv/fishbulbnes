<UserControl x:Class="InstiBulb.ControlPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    
    <Grid>
        <StackPanel Orientation="Horizontal"  >
            <Button Content="{Binding CurrentCartName}" Command="{Binding Commands, Converter={StaticResource CommandDictionaryConverter}, ConverterParameter=LoadRom}" CommandParameter="c:\\1943.zip" />
            <Button Content="{Binding PowerStatusText}" Command="{Binding Commands, Converter={StaticResource CommandDictionaryConverter}, ConverterParameter=PowerToggle}" />
        </StackPanel>
    </Grid>
</UserControl>

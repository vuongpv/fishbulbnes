            <CheckBox x:Name="EnableControls" Content="Enable" IsChecked="True" KeyDown="EnableControls_KeyDown" />

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" Background="LightGray">
            <TextBlock FontSize="12" FontWeight="Bold" >Controls</TextBlock>
            <TextBlock>Q: Start</TextBlock>
